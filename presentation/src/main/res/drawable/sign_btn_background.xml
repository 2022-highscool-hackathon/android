<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <vector
            android:width="300dp"
            android:height="35dp"
            android:viewportWidth="300"
            android:viewportHeight="35"
            >

            <group>

                <clip-path
                    android:pathData="M0 0H300V35H0V0Z"
                    />

                <path
                    android:pathData="M0 0V35H300V0"
                    android:fillColor="#B5E4FF"
                    />

            </group>

        </vector>


    </item>

    <item android:state_pressed="false">
        <vector
            android:width="300dp"
            android:height="35dp"
            android:viewportWidth="300"
            android:viewportHeight="35"
            >

            <group>

                <clip-path
                    android:pathData="M0 0H300V35H0V0Z"
                    />

                <path
                    android:pathData="M0 0V35H300V0"
                    android:fillColor="@color/main"
                    />

            </group>

        </vector>

    </item>
</selector>