<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="start_btn_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/start_btn_background</item>
        <item name="android:layout_marginStart">55dp</item>
        <item name="android:layout_marginEnd">55dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:elevation">10dp</item>
    </style>
    <style name="start_btn_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="start_btn_iamge">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">22dp</item>
    </style>

    <style name="sign_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingStart">34dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">315dp</item>
    </style>
    <style name="sign_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/sign_btn_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="all_btn_back">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">#00ff0000</item>
        <item name="android:src">@drawable/all_btn_back</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginStart">13dp</item>
    </style>

    <style name="text_400_16">
        <item name="fontFamily">@font/pretendard_regular</item>
