<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="info"
            type="com.example.hackathon_2022.ui.info.InfoFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8">

        <View
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"/>

        <TextView
            style="@style/text_600_23"
            android:textColor="@color/main"
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/infoLayout"
            app:layout_constraintStart_toStartOf="@id/infoLayout"
            android:text="내 정보"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"/>

        <TextView
            style="@style/text_600_20"
            android:textColor="@color/black"
            android:id="@+id/infoNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintStart_toStartOf="@id/infoLayout"
            android:text="이름 : ㅇㅇㅇ"
            android:layout_marginTop="21dp"
            android:layout_marginStart="20dp"/>

        <TextView
            style="@style/text_600_20"
            android:textColor="@color/black"
            android:id="@+id/infoAgeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/infoNameTxt"
            app:layout_constraintStart_toStartOf="@id/infoLayout"
            android:text="나이 : 만ㅇㅇ세"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <TextView
            style="@style/text_600_20"
            android:textColor="@color/black"
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/addressTxt"
            app:layout_constraintBottom_toBottomOf="@id/addressTxt"
            app:layout_constraintStart_toStartOf="@id/infoLayout"
            android:text="주소 :"
            android:layout_marginStart="20dp"/>
        <TextView
            style="@style/text_600_20"
            android:textColor="@color/black"
            android:id="@+id/addressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/infoAgeTxt"
            app:layout_constraintStart_toEndOf="@id/address"
            android:text="대구 ㅇㅇ구 ㅇㅇ로 ㅇㅇ아파트\n00동 00호"
            android:layout_marginTop="44dp"
            android:layout_marginStart="5dp"/>

        <TextView
            style="@style/text_600_20"
            android:textColor="@color/black"
            android:id="@+id/seekTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/addressTxt"
            app:layout_constraintStart_toStartOf="@id/infoLayout"
            android:text="병력 : 당뇨, 치매"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"/>

        <TextView
            style="@style/text_600_20"
            android:textColor="@color/black"
            android:id="@+id/etcTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/seekTxt"
            app:layout_constraintStart_toStartOf="@id/infoLayout"
            android:text="기타 : ㅇㅇ"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
        
        <androidx.appcompat.widget.AppCompatButton
            style="@style/text_600_20"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:text="정보 수정하기"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn"
            app:layout_constraintStart_toStartOf="@id/infoLayout"
            app:layout_constraintEnd_toEndOf="@id/infoLayout"
            app:layout_constraintBottom_toBottomOf="@id/infoLayout"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="@id/infoLayout"
            app:layout_constraintTop_toTopOf="@id/infoLayout"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="12dp"/>


        <View
            android:id="@+id/dolbomiLayout"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintTop_toBottomOf="@id/infoLayout"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/dolbomiInfo"
            style="@style/text_600_23"
            android:textColor="#9ADBFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 돌보미 정보"
            app:layout_constraintStart_toStartOf="@id/dolbomiLayout"
            app:layout_constraintTop_toTopOf="@id/dolbomiLayout"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/dolbomiNameTxt"
            style="@style/text_600_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 : ㅇㅇㅇ"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/dolbomiLayout"
            app:layout_constraintTop_toBottomOf="@id/dolbomiInfo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/dolbomiTelTxt"
            style="@style/text_600_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호 : 010-0000-0000"
            app:layout_constraintStart_toStartOf="@id/dolbomiLayout"
            app:layout_constraintTop_toBottomOf="@id/dolbomiNameTxt"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"/>

        <Button
            style="@style/text_600_20"
            android:textColor="@color/white"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_btn"
            android:text="전화걸기"
            app:layout_constraintStart_toStartOf="@id/dolbomiLayout"
            app:layout_constraintEnd_toEndOf="@id/dolbomiLayout"
            app:layout_constraintBottom_toBottomOf="@id/dolbomiLayout"
            android:layout_marginBottom="17dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="@id/dolbomiLayout"
            app:layout_constraintTop_toTopOf="@id/dolbomiLayout"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>