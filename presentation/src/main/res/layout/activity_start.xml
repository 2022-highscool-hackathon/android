<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hackathon_2022.ui.start.StartActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_start_1"
        style="@style/start_btn_background"
        android:layout_marginTop="153dp">

        <TextView
            android:id="@+id/tv_start_1"
            style="@style/start_btn_text"
            android:text="일자리•도움이 필요한 사람"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_start_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_start_1"
            style="@style/start_btn_iamge"
            android:src="@drawable/start_image_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_start_2"
        style="@style/start_btn_background">

        <TextView
            android:id="@+id/tv_start_2"
            style="@style/start_btn_text"
            android:text="돌보미"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_start_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_start_2"
            style="@style/start_btn_iamge"
            android:layout_width="39dp"
            android:layout_height="45dp"
            android:src="@drawable/start_image_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_start_3"
        style="@style/start_btn_background" >

        <TextView
            android:id="@+id/tv_start_3"
            style="@style/start_btn_text"
            android:text="일자리를 제공해 줄 사장님"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_start_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_start_3"
            style="@style/start_btn_iamge"
            android:src="@drawable/start_image_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        style="?attr/borderlessButtonStyle"
        android:id="@+id/btn_start_go_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="21dp"
        android:text="이미 계정이 있다면 | 로그인"
        android:textSize="15sp"
        android:textColor="#80000000"
        android:fontFamily="@font/pretendard_regular"
        android:includeFontPadding="false"/>

</LinearLayout>