<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/coTxt"
            style="@style/text_600_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회사/점포명"
            android:textColor="@color/black"
            android:layout_marginTop="13dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_400_16"
            android:text="업무종류"
            android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@+id/coTxt"
            app:layout_constraintBottom_toBottomOf="@id/coTxt"/>

        <TextView
            android:id="@+id/cityTxt"
            style="@style/text_400_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 : (구/군)"
            android:layout_marginTop="9dp"
            android:layout_marginStart="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coTxt"/>

        <TextView
            android:id="@+id/timeTxt"
            style="@style/text_400_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 : 0:00 ~ 0:00"
            android:layout_marginTop="10dp"
            android:layout_marginStart="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cityTxt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_400_15"
            android:text="시급 : 00,000원"
            android:layout_marginTop="10dp"
            android:layout_marginStart="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeTxt"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>